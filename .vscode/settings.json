{
    // Enable Material Icon Theme for these settings to take effect
    "workbench.iconTheme": "material-icon-theme",

    // Custom icon themes for folders
    "material-icon-theme.folders.customClones": [
        {
            "name": "client-web",
            "base": "client",
            "color": "green-400",
            "folderNames": []
        }
    ],

    // Custom icon themes for files
    "material-icon-theme.files.customClones": [
        {
            "name": "rust-mod",
            "base": "rust",
            "color": "blue-400",
            "fileNames": ["mod.rs"]
        },
    ],

    // Custom icons for specific folders
    "material-icon-theme.folders.associations": {
        // CLI Tool
        "client-cli": "client",
        "client-cli/src": "client",

        // Web UI
        "client-web": "client-web",

        // Server
        "server": "server",
        "server/dist": "server",
        "server/src": "server",

        // Shared code
        "shared": "shared",
        "shared/src": "shared",

        // Generated by Cargo
        "target": "target",
        "target-build": "target",
    },

    // Custom icons for specific file types
    "material-icon-theme.files.associations": {

    },


}